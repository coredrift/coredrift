<% content_for :title, 'Show User' %>
<div class="flex justify-center">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-full max-w-md">
    <h1 class="text-2xl font-bold mb-6 text-center">User Details</h1>
    <div class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700">Username</label>
        <p class="mt-1 text-gray-900"><%= @user.username %></p>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Email</label>
        <p class="mt-1 text-gray-900"><%= @user.email_address %></p>
      </div>
    </div>
    <div class="flex justify-center mt-6 space-x-4">
      <%= link_to 'Back', users_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Roles', roles_user_path(@user), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Permissions', permissions_user_path(@user), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>
</div>
