<% content_for :title, 'User List' %>
<div class="space-y-8">
  <h1 class="text-2xl font-bold mb-4">User List</h1>
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/3 bg-white">Username</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/3 bg-white">Email</th>
        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 bg-white border-b border-gray-200">
            <%= link_to user.username, user_path(user), class: 'text-blue-500 hover:underline' %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 bg-white border-b border-gray-200"><%= user.email_address %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center space-x-2 flex justify-center bg-white border-b border-gray-200">
            <%= link_to 'Show', user_path(user), class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white px-6 py-2 rounded w-24' %>
            <%= link_to 'Edit', edit_user_path(user), class: 'inline-block bg-yellow-500 text-white px-6 py-2 rounded w-24' %>
            <%= button_to 'Delete', user_path(user), method: :delete, form: { class: 'inline' }, class: 'inline-flex bg-red-500 text-white px-4 py-2 rounded justify-center items-center' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="flex justify-center mt-6">
      <%= link_to 'New', new_user_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>
