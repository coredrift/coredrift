<% content_for :title, @role.name %>
<div class="max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <h1 class="text-2xl font-bold mb-6 text-center"><%= @role.name %></h1>
  <div class="space-y-4">
    <div>
      <label class="block text-sm font-medium text-gray-700">Description</label>
      <p class="mt-1 text-gray-900"><%= @role.description %></p>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">Status</label>
      <p class="mt-1 text-gray-900"><%= @role.status %></p>
    </div>
  </div>
  <div class="flex justify-center mt-6 space-x-4">
    <%= link_to 'Back', roles_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    <%= link_to 'Edit', edit_role_path(@role), class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded' %>
    <%= link_to 'Permissions', permissions_role_path(@role), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>