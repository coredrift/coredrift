<div class="max-w-md mx-auto">
  <%= form_with model: role, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.text_field :name, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm p-2' %>
    </div>
    <div class="mb-4">
      <%= f.label :description, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.text_area :description, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm p-2' %>
    </div>
    <div class="mb-4">
      <%= f.label :status, 'Enabled', class: 'block text-sm font-medium text-gray-700' %>
      <%= f.check_box :status, { checked: role.status == 'enabled', class: 'p-2' }, 'enabled', 'disabled' %>
    </div>
    <div class="flex justify-center gap-4">
      <%= link_to 'Back', roles_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
      <%= f.submit "Update", class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  <% end %>
</div>