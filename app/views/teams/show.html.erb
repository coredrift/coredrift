<%# Removed Created At field from the show view to avoid displaying audit fields %>
<%# Removed unnecessary fields from the show view %>
<% content_for :title, @team.name %>
<div class="max-w-4xl mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <h1 class="text-2xl font-bold mb-6 text-center"><%= @team.name %></h1>
  <div class="space-y-4">
    <div>
      <label class="block text-sm font-medium text-gray-700">Description</label>
      <p class="mt-1 text-gray-900"><%= @team.description %></p>
    </div>
  </div>
  <div class="flex justify-center mt-6 space-x-4">
    <%= link_to 'Back', teams_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    <%= link_to 'Edit', edit_team_path(@team), class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded' %>
    <%= link_to 'Members', members_team_path(@team), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>