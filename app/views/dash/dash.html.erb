<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
  <% if current_user.role == 'team_lead' %>
    <div class="bg-white shadow-md rounded p-4">
      <h2 class="text-lg font-bold mb-2">Team Lead</h2>
      <div class="team-widget">
        <% @teams.each do |team| %>
          <div class="team-block">
            <% if team.daily_setup.present? %>
              <div class="mb-2"><%= team.daily_setup.details %></div>
              <%= link_to 'Edit', edit_daily_setup_path(team.daily_setup), class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded float-right' %>
            <% else %>
              <p>Hey! Let’s set up your daily standup – just once and done.</p>
              <%= link_to 'New', new_team_daily_setup_path(team), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded float-right' %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if ['team_lead', 'software_engineer', 'designer', 'product_owner', 'qa_engineer', 'devops_engineer', 'scrum_master', 'business_analyst'].include?(current_user.role) %>
    <div class="bg-white shadow-md rounded p-4">
      <h2 class="text-lg font-bold mb-2">Team Member</h2>
      <p>Content for the Team Member block goes here.</p>
    </div>

    <div class="bg-white shadow-md rounded p-4">
      <h2 class="text-lg font-bold mb-2">Misc</h2>
      <p>Content for the Misc block goes here.</p>
    </div>
  <% end %>
</div>